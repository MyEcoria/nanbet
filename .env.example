# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
ORIGIN=*

# Database Configuration (MariaDB/MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nanbet
DB_USER=nanbet
DB_PASSWORD=your_secure_password_here

# Nano Cryptocurrency Nodes API
# Get your API key from https://nanswap.com/nodes
NODES_API_KEY=your_nanswap_api_key_here

# Nanswap Nodes Wallet Configuration
NANSWAP_NODES_WALLET_RPC=https://nodes.nanswap.com/
NANSWAP_NODES_WALLET_API_KEY=your_nanswap_wallet_api_key_here
NANSWAP_NODES_WALLET_SECRET_KEY=your_nanswap_wallet_secret_key_here
NANSWAP_NODES_WALLET_ID=your_nanswap_wallet_id_here

# Logging
LOG_LEVEL=info

# Admin Configuration
ADMIN_KEY=your_secure_admin_key_here

# Hot Wallet Sweeper
# Interval in minutes to scan deposit addresses
SWEEP_INTERVAL=10
